{
    "name": "webwisp",
    "version": "1.0.0",
    "description": "An agent for generating end-to-end tests from a given URL",
    "license": "(MIT OR Apache-2.0)",
    "private": true,
    "type": "module",
    "author": {
        "name": "Brewen Couaran",
        "email": "brewcoua@brewen.dev",
        "url": "https://brewen.dev"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:brewcoua/webwisp.git"
    },
    "homepage": "https://github.com/brewcoua/webwisp#readme",
    "bugs": {
        "url": "https://github.com/brewcoua/webwisp/issues",
        "email": "contact@brewen.dev"
    },
    "engines": {
        "node": ">=20.14.0",
        "npm": ">=10.5.0"
    },
    "scripts": {
        "start": "(which bun && bun start:bun) || npm run start:node",
        "start:bun": "bun run build && bun ./dist/webwisp.js",
        "start:node": "npm run build && node ./dist/webwisp.js",
        "demo1": "node ./dist/webwisp.js -t \"https://cftl.fr/actualites/jftl/\" -k \"Does Xavier Blanc have a Talk at 10:40 in the morning ?\"",
        "demo2": "node ./dist/webwisp.js -t \"https://cftl.fr/actualites/jftl/\" -k \"Is the 16th edition of the JFTL at Beffroi de Montrouge ?\"",
        "build": "npx rollup -c",
        "build:watch": "npx rollup -c -w",
        "format": "npx prettier --write ./src/**/*.ts",
        "lint": "npx eslint ./src/**/*.ts"
    },
    "devDependencies": {
        "@eslint/js": "^9.4.0",
        "@rollup/plugin-commonjs": "^26.0.1",
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-terser": "^0.4.4",
        "@rollup/plugin-typescript": "^11.1.6",
        "@types/eslint__js": "^8.42.3",
        "eslint": "~8.56.0",
        "globals": "^15.4.0",
        "prettier": "^3.2.5",
        "rollup": "^4.18.0",
        "terser": "^5.31.0",
        "tslib": "^2.6.3",
        "typescript": "^5.4.5",
        "typescript-eslint": "^7.12.0"
    },
    "dependencies": {
        "@inquirer/core": "^8.2.1",
        "@inquirer/prompts": "^5.0.4",
        "chalk": "^5.3.0",
        "commander": "^12.1.0",
        "dotenv": "^16.4.5",
        "node-audiorecorder": "^3.0.0",
        "openai": "^4.47.1",
        "ora": "^8.0.1",
        "playwright": "^1.44.0"
    },
    "bin": {
        "webwisp": "./dist/webwisp"
    }
}
