{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "Bundler",

        "strict": true,
        "declaration": true,
        "sourceMap": true,

        "skipLibCheck": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "useDefineForClassFields": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,

        "lib": ["ES2022", "DOM"]
    }
}
