{
    "name": "@webwisp/client",
    "version": "1.0.0",
    "description": "A web agent for automatic end-to-end testing of websites.",
    "main": "./out/main/index.js",
    "author": {
        "name": "Brewen Couaran",
        "email": "brewcoua@brewen.dev",
        "url": "https://brewen.dev"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh@github.com:brewcoua/webwisp.git"
    },
    "homepage": "https://github.com/brewcoua/webwisp/tree/master/apps/client#readme",
    "bugs": {
        "url": "https://github.com/brewcoua/webwisp/issues",
        "email": "contact@brewen.dev"
    },
    "engines": {
        "node": ">=20.14.0",
        "npm": ">=10.5.0"
    },
    "scripts": {
        "format": "pnpm exec prettier --write .",
        "typecheck:node": "pnpm exec tsc --noEmit -p tsconfig.node.json --composite false",
        "typecheck:web": "pnpm exec tsc --noEmit -p tsconfig.web.json --composite false",
        "typecheck": "pnpm run typecheck:node && pnpm run typecheck:web",
        "start": "pnpm exec electron-vite preview",
        "dev": "pnpm exec electron-vite dev",
        "build": "pnpm run typecheck && pnpm exec electron-vite build",
        "postinstall": "pnpm exec electron-builder install-app-deps",
        "build:unpack": "pnpm run build && pnpm exec electron-builder --dir",
        "build:win": "pnpm run build && pnpm exec electron-builder --win",
        "build:mac": "pnpm exec electron-vite build && pnpm exec electron-builder --mac",
        "build:linux": "pnpm exec electron-vite build && pnpm exec electron-builder --linux"
    },
    "dependencies": {
        "@electron-toolkit/preload": "^3.0.1",
        "@electron-toolkit/utils": "^3.0.0",
        "electron-store": "^9.0.0",
        "electron-updater": "^6.2.1"
    },
    "devDependencies": {
        "@chakra-ui/react": "^2.8.2",
        "@electron-toolkit/tsconfig": "^1.0.1",
        "@preact/preset-vite": "^2.8.2",
        "@preact/signals": "^1.2.3",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@vitejs/plugin-react": "^4.3.1",
        "axios": "^1.7.2",
        "electron": "^28.3.3",
        "electron-builder": "^24.13.3",
        "electron-vite": "^2.2.0",
        "preact": "^10.22.0",
        "preact-router": "^4.1.2",
        "react-icons": "^5.2.1",
        "sass": "^1.77.5",
        "typescript": "^5.4.5",
        "vite": "^5.3.1"
    }
}
