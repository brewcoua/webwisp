{
    "name": "@webwisp/agent",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/agent/src",
    "projectType": "application",
    "targets": {
        "start": {
            "command": "node dist/main.js",
            "dependsOn": ["build"]
        },
        "build": {
            "executor": "@nx/rollup:rollup:build",
            "options": {
                "main": "{projectRoot}/src/main.ts",
                "outputPath": "dist/packages/agent",
                "tsConfig": "{projectRoot}/tsconfig.json",
                "external": ["playwright", "openai", "winston"]
            },
            "configurations": {
                "development": {},
                "production": {}
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["apps/back/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "apps/back/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true,
                    "reporters": ["jest-junit"],
                    "coverageReporters": ["xml"]
                }
            }
        },
        "docker-build": {
            "command": "docker build -f apps/back/Dockerfile . -t bdev-back --no-cache"
        },
        "deploy": {
            "executor": "@brewen.dev/runner:fly.io",
            "options": {
                "accessToken": "$FLY_ACCESS_TOKEN",
                "app": "$FLY_APP_NAME",
                "config": "apps/back/fly.toml",
                "dockerfile": "apps/back/Dockerfile",
                "binary": "$FLY_BINARY"
            }
        }
    },
    "tags": []
}
